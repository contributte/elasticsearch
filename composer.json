{
  "name": "contributte/elasticsearch",
  "description": "Tiny Elasticsearch integration into Nette Framework",
  "keywords": [
    "contributte",
    "nette",
    "elasticsearch",
    "search",
    "elastic",
    "es"
  ],
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/contributte/elasticsearch",
  "authors": [
    {
      "name": "Vojtěch Mareš"
    }
  ],
  "require": {
    "php": ">=8.1",
    "elasticsearch/elasticsearch": "^6.8.0|^7.0.0",
    "nette/di": "^3.0.1"
  },
  "require-dev": {
    "contributte/qa": "^0.4",
    "contributte/tester": "^0.4",
    "contributte/phpstan": "^0.1"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\Elasticsearch\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Cases\\": "tests/cases"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.4.x-dev"
    }
  }
}
